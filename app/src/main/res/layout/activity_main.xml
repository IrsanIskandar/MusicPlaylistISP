<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="12dp"
        android:text="Application Playlist Music"
        android:textColor="@color/colorContent"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/editTextSearch"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="122dp"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:hint="Search Music..."
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/buttonSeacrh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editTextSearch"
        android:layout_alignBottom="@+id/editTextSearch"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="-2dp"
        android:background="@color/colorPrimary"
        android:text="Search"
        android:textColor="@color/colorButton" />

    <TextView
        android:id="@+id/textViewListMusic"
        android:layout_width="351dp"
        android:layout_height="149dp"
        android:layout_alignStart="@+id/editTextSearch"
        android:layout_alignParentTop="true"
        android:layout_marginTop="167dp"
        android:text="TextView" />
</RelativeLayout>